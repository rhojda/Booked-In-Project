<h1>New Book</h1>

{{!This is the url the form is submitted against}}
<form action="/books/upsert" role="form" method="post">
    {{#if book}} {{!Adding the book index to the form}}
    <div>
        <h2>{{book.title}}</h2>
        <input type="hidden" name="id" value="{{bookIndex}}">
    </div>
    {{/if}}
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" {{#if book}}value="{{book.title}}" {{/if}}>
    </div>
    <div>
        <label for="publishing_Year">Publishing year</label>
        <input type="number" step="1" placeholder="2000" id="publishing_Year" name="publishingYear" {{#if
            book}}value="{{book.publishingYear}}" {{/if}}>
    </div>
    <div class="mb-3">
        <label for="authorIds">Author</label>
        <select name="authorIds" multiple id="authorIds">
            <option disabled value>-- select Author --</option>
            {{#each authors}}
            <option value="{{@index}}" {{#if (and @root.book (in @root.book.authorIds @index))}}selected{{/if}}>
                {{this.firstName}} {{this.lastName}}
            </option>
            {{/each}}
        </select>
    </div>
    <div class="mb-3">
        <label for="genreIds">Genres</label>
        <select name="genreIds" multiple id="genreIds">
            <option disabled value>-- select Genre --</option>
            {{#each genres}}
            <option value="{{@index}}" {{#if (and @root.book (in @root.book.genresIds @index))}}selected{{/if}}>
                {{this.genre_title}}
            </option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>